<%- include('../includes/head.ejs') %>
<link rel="stylesheet" href="/css/main.css" />
    <link rel="stylesheet" href="/css/forms.css">
    <link rel="stylesheet" href="/css/auth.css">
    <script src="/js/signup.js" defer></script>
</head>

<body>
    <%- include('../includes/navigation.ejs') %>

    <main>
        <p class="userMessage userMessage--error hide-field"></p>
        <form class="login-form signupForm">
            <div class="form-control">
                <label for="email">E-Mail</label>
                <input type="email" name="email" id="email" class="signupEmail">
            </div>
            <div class="form-control">
                <label for="password">Password</label>
                <input type="password" name="password" id="password" class="signupPassword">
            </div>
            <div class="form-control">
                <label for="confirmPassword">Confirm Password</label>
                <input type="password" name="confirmPassword" id="confirmPassword" class="signupConfirmPassword">
                <input type="hidden" value="<%= csurfToken %>" class="csurfToken" />
            </div>
            <button class="btn" type="submit">Sign up</button>
        </form>
    </main>
<%- include('../includes/end.ejs') %>